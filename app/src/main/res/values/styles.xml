<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledButton" parent="Base.Theme.ChatApp">
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/filled_button_background</item> <!-- Fix this line -->
    </style>

    <style name="OutlinedButton" parent="Base.Theme.ChatApp">
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:background">@drawable/outlined_button_background</item> <!-- Fix this line -->
    </style>

    <style name="CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>  <!-- This makes it round -->
    </style>

    <style name="cardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="iconButton" parent="Widget.Material3.Button.IconButton.Filled">
        <!-- Use backgroundTint to set the background color -->
        <item name="backgroundTint">?android:colorPrimary</item>

        <!-- iconTint is used for setting the icon color -->
        <item name="iconTint">@color/white</item>

        <!-- Optional: text color, if it's a button with text -->
        <item name="android:textColor">?android:colorPrimary</item>

        <!-- Set the icon size -->
        <item name="iconSize">30dp</item>

    </style>



</resources>